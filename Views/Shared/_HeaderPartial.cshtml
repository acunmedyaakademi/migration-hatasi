@model BasicBlogCms.Models.HeaderPartialModel


<!-- Page Header-->

    <header class="masthead" style="background-image: url('@Model.ImageUrl')">
            <div class="container position-relative px-4 px-lg-5">
                <div class="row gx-4 gx-lg-5 justify-content-center">
                    <div class="col-md-10 col-lg-8 col-xl-7">
                        <div class="@(Model.IsPost ? "post-heading" : "site-heading" ) ">
                            <h1>@Model.Title</h1>
                            <span class="subheading">@Model.Desc</span>
                            @{

                                if (Model.IsPost)
                                {
                                <span class="meta">
                                @Model.PostDate.ToString("dd/MM/yyyy HH:mm")
                                tarihinde
                                
                                <a href="/yazarlar/@Model.UserId">@Model.Usarname</a>
                                tarafından yazıldı

                             </span>

                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </header>